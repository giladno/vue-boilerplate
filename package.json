{
    "name": "vue-boilerplate",
    "version": "1.0.0",
    "description": "Simple vue boilerplate",
    "scripts": {
        "start": "$(npm bin)/webpack-dev-server",
        "clean": "rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "NODE_ENV=production $(npm bin)/webpack --colors"
    },
    "keywords": [],
    "author": "Gilad Novik <gilad@novik.ca>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/giladno/vue-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/giladno/vue-boilerplate/issues"
    },
    "homepage": "https://github.com/giladno/vue-boilerplate#readme",
    "dependencies": {
        "normalize.css": "^8.0.0",
        "vue": "^2.5.16",
        "vue-router": "^3.0.1"
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "modules": false,
                    "targets": {
                        "chrome": "60"
                    }
                }
            ],
            "vue"
        ],
        "plugins": [
            "transform-object-rest-spread"
        ]
    },
    "eslintConfig": {
        "root": true,
        "globals": {
            "__DEV__": true,
            "Vue": true
        },
        "rules": {
            "no-console": 0,
            "strict": 0,
            "no-unused-vars": 1,
            "comma-dangle": [
                1,
                "always-multiline"
            ],
            "quotes": [
                1,
                "single"
            ],
            "linebreak-style": [
                2,
                "unix"
            ],
            "semi": [
                1,
                "always"
            ],
            "no-empty": [
                1,
                {
                    "allowEmptyCatch": true
                }
            ],
            "max-len": [
                1,
                120,
                4,
                {
                    "ignoreUrls": true,
                    "ignorePattern": "/(.*)/;",
                    "ignoreRegExpLiterals": true
                }
            ]
        },
        "env": {
            "amd": true,
            "es6": true,
            "commonjs": true,
            "browser": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:vue/recommended"
        ],
        "plugins": [
            "vue"
        ],
        "parser": "babel-eslint"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.4",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-vue": "^2.0.2",
        "css-loader": "^0.28.11",
        "dotenv-webpack": "^1.5.7",
        "eslint": "^4.19.1",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-vue": "^4.5.0",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "html-webpack-template": "^6.2.0",
        "less": "^3.0.4",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.9.0",
        "sass-loader": "^7.0.3",
        "uglifyjs-webpack-plugin": "^1.2.6",
        "vue-loader": "^15.2.4",
        "vue-template-compiler": "^2.5.16",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.8",
        "webpack-dev-server": "^3.1.4"
    }
}
